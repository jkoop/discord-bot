{
	"compilerOptions": {
		"module": "ESNext",
		"target": "esnext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"types": ["node"],
		"baseUrl": "./"
	},
	"include": ["src/**/*"]
}
