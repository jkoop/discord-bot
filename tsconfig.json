{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"types": ["node", "reflect-metadata"]
	},
	"include": ["src/**/*"]
}
